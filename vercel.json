{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/next" },   // Frontend
    { "src": "api/index.py", "use": "@vercel/python" }  // Python API
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.py" },      // API route
    { "src": "/(.*)", "dest": "/" }                     // Frontend route
  ]
}

